# chezmoi:template:left-delimiter="# [[" right-delimiter="]] #"
# [[ if eq .chezmoi.os "darwin" ]] #
# Reference: https://github.com/i3/i3/blob/next/etc/config

# Set to 'true' to automatically start AeroSpace when logging in
# You can also enable this manually in AeroSpace preferences
start-at-login = true

# Possible values: tiles|accordion
default-root-container-layout = 'tiles'

# Possible values: horizontal|vertical|auto
# 'auto' means: wide monitor (anything wider than high) gets horizontal orientation,
#               tall monitor (anything higher than wide) gets vertical orientation
default-root-container-orientation = 'auto'

# The 'accordion-padding' specifies the size of accordion padding
# You can set 0 to disable the padding feature
accordion-padding = 10

# i3 doesn't have "normalizations" feature that why we disable them here.
# But the feature is very helpful.
# Normalizations eliminate all sorts of weird tree configurations that don't make sense.
# Give normalizations a chance and enable them back.
enable-normalization-flatten-containers = true
enable-normalization-opposite-orientation-for-nested-containers = true

# You can effectively turn off macOS "Hide application" (cmd-h) feature by toggling this flag
# Useful if you don't use this macOS feature, but accidentally hit cmd-h or cmd-ctrl-h key
# Also see: https://nikitabobko.github.io/AeroSpace/goodies#disable-hide-app
automatically-unhide-macos-hidden-apps = true

# Mouse follows focus when focused monitor changes
on-focused-monitor-changed = ['move-mouse monitor-lazy-center']
on-focus-changed = 'move-mouse window-lazy-center'

after-startup-command = ['exec-and-forget borders']

[gaps]
inner.horizontal = 4
inner.vertical = 4
outer.left = 3
outer.bottom = 5
outer.top = 1
outer.right = 3

[workspace-to-monitor-force-assignment]
1 = '^built-in retina display$'
2 = '^built-in retina display$'
3 = '^built-in retina display$'
4 = 'secondary'
5 = 'secondary'
6 = 'secondary'

[mode.main.binding]
# Monitor Operations (Ctrl)
ctrl-up = 'focus-monitor --wrap-around prev'
ctrl-down = 'focus-monitor --wrap-around next'
ctrl-shift-up = 'move-node-to-monitor --wrap-around --focus-follows-window prev'
ctrl-shift-down = 'move-node-to-monitor --wrap-around --focus-follows-window next'

# Window Focus Operations (Alt + Left/Right)
alt-left = 'focus --boundaries-action wrap-around-the-workspace dfs-prev'
alt-right = 'focus --boundaries-action wrap-around-the-workspace dfs-next'

# Workspace Operations (Alt + Up/Down)
alt-up = "exec-and-forget aerospace list-workspaces --monitor focused --empty no | aerospace workspace --wrap-around prev"
alt-down = "exec-and-forget aerospace list-workspaces --monitor focused --empty no | aerospace workspace --wrap-around next"
alt-shift-left = 'move left'
alt-shift-right = 'move right'
alt-shift-up = 'move-node-to-workspace --focus-follows-window --wrap-around prev'
alt-shift-down = 'move-node-to-workspace --focus-follows-window --wrap-around next'

# Back-and-forth Operations (Tab)
ctrl-tab = 'focus-back-and-forth'
alt-tab = 'workspace-back-and-forth'

# Window Layout Operations (Alt + hjkl)
alt-j = 'join-with down'
alt-k = 'join-with up'
alt-l = 'join-with right'
alt-h = 'join-with left'

# System Operations
ctrl-enter = 'exec-and-forget open -na wezterm'
ctrl-r = 'reload-config'
ctrl-w = 'close'
ctrl-shift-w = 'close-all-windows-but-current'

# [[ end ]] #
